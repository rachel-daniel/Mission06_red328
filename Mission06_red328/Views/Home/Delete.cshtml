@{
    ViewData["Title"] = "Delete Movie";
}

@model AddMovie

<h2>Confirm Movie Deletion</h2>
<h3>Are you sure you want to delete @Model.Title from the database?</h3>

<form method="post" asp-action="Delete">
    <button class="btn" type="submit">Delete</button>
    <a class="btn btn-primary" asp-controller="Home" asp-action="DisplayMovies">Cancel</a>

    <input type="hidden" asp-for="MovieId" />
</form>